generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id           Int      @id @default(autoincrement())
  name         String
  albumArtUri  String
  released     String
  tracks       Track[]

  artistId     Int
  artist       Artist   @relation(fields: [artistId], references: [id])

  created      Boolean

  @@unique([name, artistId]) // ‚Üê Add this line
}

model Track {
  id        Int    @id @default(autoincrement())
  name      String
  duration_ms Int
  track_number Int
  albumId   Int
  album     Album  @relation(fields: [albumId], references: [id])
  artistId  Int
  artist    Artist @relation(fields: [artistId], references: [id])
  created   Boolean

  @@unique([name, albumId, artistId])
}

model Artist {
  id Int @id @default(autoincrement())
  name String @unique

  albums Album[]
  tracks Track[]

  created Boolean
}